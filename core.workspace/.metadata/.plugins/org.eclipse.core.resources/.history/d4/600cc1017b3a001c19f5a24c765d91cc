package com.rakesh.dp.dao;

import com.rakesh.dp.dto.ApplicationDTO;
import com.rakesh.dp.dto.InstagramApplicationDTO;

public class ApplicationDAO {
private ApplicationDTO[] dtos1=new ApplicationDTO[10];
	private InstagramApplicationDTO[] dtos = new InstagramApplicationDTO[10];
	private int zee = 0;

	public void save(ApplicationDTO dto) {
		if (this.zee < this.dtos.length && dto != null) {
			this.dtos[this.zee] = dto;        
		} else {
			System.out.println("SAVE METHOD IS NOT POSSIBLE");
		}
	}

	public void searchApplicationByName(String appName) {
		System.out.println("Name Passed : ".concat(appName));
		for (int can = 0; can < dtos.length; can++) {
			ApplicationDTO ref = dtos[can];

			if (ref != null) {
				String searchName = ref.getName();
				if (appName.equals(searchName)) {
					System.out.println("Name is found :".concat(searchName));
				}
				else{
					System.out.println("Name is Not Found");
				}

			}
		}

	}
	
	public ApplicationDTO[] getDtos() {
		return dtos;
	}
	
	
	public void displayAllApplicationsDtos() {
		for (int bell = 0; bell < dtos.length; bell++) {
			ApplicationDTO ref=dtos[bell];
			System.out.println(ref.getName());
			System.out.println(ref.getFounder());
			System.out.println(ref.getVersion());
			System.out.println(ref.getCompany());
			
		}
	}
}
