package com.rakesh.dp.dao;

import com.rakesh.dp.dto.ApplicationDTO;
import com.rakesh.dp.dto.FaceBookApplicationDTO;
import com.rakesh.dp.dto.InstagramApplicationDTO;

public class ApplicationDAO {
	private ApplicationDTO[] dtos=new ApplicationDTO[4];
	private FaceBookApplicationDTO[] dtos1 = new FaceBookApplicationDTO[4];
	private InstagramApplicationDTO[] dtos2=new InstagramApplicationDTO[4];
	private int zee = 0;

	public void save(ApplicationDTO dto) {
		if (this.zee < this.dtos.length && dto != null) {
			this.dtos[this.zee++] = dto;
		} else {
			System.out.println("SAVE METHOD IS NOT POSSIBLE");
		}
	}
	
	public void save(InstagramApplicationDTO dto) {
		if (this.zee < this.dtos.length && dto != null) {
			System.out.println("Invoked InstagramApplicationDTO save");
			this.dtos[this.zee++] = dto;
		} else {
			System.out.println("SAVE METHOD IS NOT POSSIBLE");
		}
	}

	public ApplicationDTO searchApplicationByName(String appName) {
		System.out.println("Name Passed : ".concat(appName));
		for (int can = 0; can < dtos.length; can++) {
			ApplicationDTO ref = dtos[can];

			if (ref != null) {
				String searchName = ref.getName();
				if (appName.equals(searchName)) {
					System.out.println("Name is found :".concat(searchName));
				}
				else{
					System.out.println("Name is Not Found");
				}

			}
		}
		return null;

	}
	
	public ApplicationDTO[] getDtos() {
		return dtos;
	}
	
	public void displayApplicationsDtos() {
		for (int bell = 0; bell < dtos.length; bell++) {
			System.out.println("Invoked displayApplicationsDtos");

			ApplicationDTO ref= this.dtos[bell];
			if(ref!=null) {
			System.out.println(ref.getName());
			System.out.println(ref.getVersion());
			System.out.println(ref.getFounder());
			System.out.println(ref.getCompany());   
		
			}
			else {
				System.out.println("EMPTY INDEX");
			}
		}
	}
	
	public void displayInstagramApplicationsDtos() {
		for (int bell = 0; bell < this.dtos2.length; bell++) {
			System.out.println("Invoked displayInstagramApplicationsDtos");
			InstagramApplicationDTO ref1=this.dtos2[bell];
			if(ref1!=null) {
//			//System.out.println(ref.getName());
//			System.out.println(ref.getFounder());
//			System.out.println(ref.getVersion());
//			System.out.println(ref.getCompany());
			System.out.println(ref1.getTotalUsers());
			System.out.println(ref1.getLocation());
			}//else {
//				System.out.println("INDEX IS FULL");
//			}
		}
	}
	
	public FaceBookApplicationDTO getFaceBookApplicationDTO(String name){
		for (int tan = 0; tan < dtos.length; tan++) {
			FaceBookApplicationDTO ref=this.dtos1[tan];
			if(ref!=null) {
				
				String appName=ref.getName();
				if(name.equals(appName)) {
					System.out.println("Name is Found");
				}else {
					System.out.println("Name is Not Found");
				}
			}
		}
		return null;
	}
	
	public InstagramApplicationDTO getInstagramApplicationDTO(String founder){
		for (int tan = 0; tan < dtos.length; tan++) {
			InstagramApplicationDTO ref=this.dtos2[tan];
			if(ref!=null) {
				
				String appFounder=ref.getFounder();
				if(founder.equals(appFounder)) {
					System.out.println("Name is Found");
				}else {
					System.out.println("Name is Not Found");
				}
			}
		}
		return null;
	}
	
	public void displayDetails() {
	
		
	}
}
